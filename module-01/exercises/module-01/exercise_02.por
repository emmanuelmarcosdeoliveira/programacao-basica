programa
{
	
	funcao inicio()
	{
		cadeia nomeFuncionario
		inteiro anoNascimento
		real salario
		escreva("Qual o nome do Funcionário ? ")
		leia(nomeFuncionario)
		escreva("Qual o ano de Nascimento ? ")
		leia(anoNascimento)
		escreva("Salário R$:")
