		escreva("NOME: " + nomeFuncionario )
		escreva("\n")
		escreva("NASCIMENTO EM: " + anoNascimento )
		escreva("\n")
		escreva("SALARIO DE: "+ salario)
		escreva("\n")
		escreva("-----------------------------" )
		
	}
}
